{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/frame",
      "dest": "/app/frame/page.tsx"
    },
    {
      "src": "/.well-known/farcaster.json",
      "dest": "/public/.well-known/farcaster.json"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "Content-Security-Policy", "value": "frame-ancestors 'none'" }
      ]
    }
  ],
  "framework": "nextjs",
  "regions": ["iad1"]
}
